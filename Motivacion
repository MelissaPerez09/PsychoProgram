    private void opcionesActionPerformed(java.awt.event.ActionEvent evt) {                                         
        if (opciones.getSelectedItem().toString().equals("Vivir el presente")){
            JOptionPane.showMessageDialog( null, "Sólo existen dos días en el año en que no se puede hacer nada. \nUno se llama ayer y otro mañana. \nPor lo tanto hoy es el dia ideal para amar, crecer, hacer y principalmente vivir. \n-Dalai Lama");      
        }
        else if (opciones.getSelectedItem().toString().equals("Estudiar")){
            JOptionPane.showMessageDialog( null, "La verdadera educación consiste en obtener lo mejor de uno mismo \n-Mahatma Gandhi");      
        }
        else if (opciones.getSelectedItem().toString().equals("Hacer ejercicio")){
            JOptionPane.showMessageDialog( null, "No busques tiempo para hacer ejercicio, encuéntralo. \nNo te puedes poner ningún límite, no hay nada imposible\n -Usain Bolt");
        }
        else if (opciones.getSelectedItem().toString().equals("Alcanzar una meta")){
            JOptionPane.showMessageDialog( null, "El camino es el que nos enseña la mejor forma de llegar\ny nos enriquece mientras lo estamos cruzando. \n-Paulo Cohelo");
        }
        else if (opciones.getSelectedItem().toString().equals("Trabajar")){
            JOptionPane.showMessageDialog( null, "El comienzo es la parte más importante del trabajo. \nLánzate y comienza aquel trabajo que te gusta, sigue perseverando. \n-Platón");
        }
    }                                        

    private void regresarMotiActionPerformed(java.awt.event.ActionEvent evt) {                                             

    }                                            

